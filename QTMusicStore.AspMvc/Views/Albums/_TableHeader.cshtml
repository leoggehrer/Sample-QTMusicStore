@*@CustomCode*@
@model IEnumerable<QTMusicStore.AspMvc.Models.App.Album>
@{
    var orderBy = (string)ViewBag.OrderBy ?? string.Empty;
}
<thead>
    <tr>
        <th>
            Artist
        </th>
        <th>
            @if (orderBy.StartsWith("Title") && orderBy.EndsWith("ASC"))
            {
                <a asp-action="OrderBy" asp-route-orderBy="Title DESC" class="btn btn-outline"><strong>Title</strong> <i class="fa fa-sort-desc"></i></a>
            }
            else if (orderBy.StartsWith("Title") && orderBy.EndsWith("DESC"))
            {
                <a asp-action="OrderBy" asp-route-orderBy="" class="btn btn-outline"><strong>Title</strong> <i class="fa fa-sort-asc"></i></a>
            }
            else
            {
                <a asp-action="OrderBy" asp-route-orderBy="Title ASC" class="btn btn-outline"><strong>Title</strong></a>
            }
        </th>
        <th></th>
    </tr>
</thead>
